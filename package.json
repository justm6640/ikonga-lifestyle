{
    "name": "ikonga-lifestyle",
    "version": "1.0.0",
    "description": "IKONGA Lifestyle - Application de coaching nutritionnel",
    "private": true,
    "scripts": {
        "install:backend": "cd backend && npm install",
        "install:frontend": "cd frontend && npm install",
        "install:all": "npm run install:backend && npm run install:frontend",
        "prisma:generate": "cd backend && npx prisma generate",
        "prisma:migrate": "cd backend && npx prisma migrate deploy",
        "build:backend": "cd backend && npm run build",
        "build:frontend": "cd frontend && npm run build",
        "build": "npm run build:backend && npm run build:frontend",
        "start:backend": "cd backend && npm run start:prod",
        "start:frontend": "cd frontend && npm start",
        "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
        "dev:backend": "cd backend && npm run start:dev",
        "dev:frontend": "cd frontend && npm run dev",
        "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\""
    },
    "workspaces": [
        "backend",
        "frontend"
    ],
    "dependencies": {
        "concurrently": "^8.2.2"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    },
    "keywords": [
        "nutrition",
        "coaching",
        "nestjs",
        "nextjs",
        "prisma"
    ],
    "author": "IKONGA",
    "license": "UNLICENSED"
}